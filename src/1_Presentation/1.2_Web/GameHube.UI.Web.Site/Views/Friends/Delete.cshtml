@model GameHub.Application.ViewModels.FriendViewModel

@{
    ViewData["Title"] = "Delete";
}

<form asp-action="Delete">
    <div class="container">
        <div class="row">
            <h2>Deseja realmente excluir este amigo?</h2>
        </div>
        <hr />
        <div class="col-md-4">
            <img src="@Html.DisplayFor(model => model.ImagePath)" class="img-thumbnail center-block" />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ReputationLevel)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ReputationLevel)
                </dd>
            </dl>
            <div class="row">
                <div class="pull-left">
                    <a asp-action="Index" class="btn btn-default" role="button">
                        <span class="glyphicon glyphicon-backward" />
                        VOLTAR
                    </a>
                </div>
                <div class="form-group pull-right">
                    <input type="submit" value="Sim, Excluir!!" class="btn btn-danger" />
                </div>
                <div class="modal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">Notificação de Exclusão</div>
                            <div class="modal-body"><p>Você está prestes a EXCLUIR seu amigo. Tem certeza que é isso mesmo que voce deseja???</p></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>