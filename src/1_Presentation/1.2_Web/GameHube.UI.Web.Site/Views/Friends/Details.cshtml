@model GameHub.Application.ViewModels.FriendViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row">
        <h2>Este(a) é o seu(sua) amigo(a)</h2>
    </div>
    <hr />
    <div class="col-md-4">
        <img src="@Html.DisplayFor(model => model.ImagePath)" class="img-thumbnail center-block"/>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ReputationLevel)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ReputationLevel)
            </dd>
        </dl>
        <div class="row">
            <div class="pull-left">
                <a asp-action="Index" class="btn btn-default" role="button">
                    <span class="glyphicon glyphicon-backward" />
                    VOLTAR
                </a>
            </div>
            <div class="form-group pull-right">
                <a asp-action="Edit" asp-route-id="@Model.FriendId" title="Edit" class="btn btn-primary">
                    <span class="glyphicon">Editar !!</span>
                </a>
            </div>
        </div>
    </div>
    
</div>