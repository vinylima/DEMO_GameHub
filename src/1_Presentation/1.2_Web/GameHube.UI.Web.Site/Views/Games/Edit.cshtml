@model GameHub.Application.ViewModels.GameViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="pull-left" style="margin-top:20px; margin-right:70px;">
            <a asp-action="Index" class="btn btn-default" role="button">
                <span class="glyphicon glyphicon-backward" />
                VOLTAR
            </a>
        </div>
        <h2>Edição de Jogo</h2>
    </div>
    <hr />
    <div class="row">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <img src="@Html.DisplayFor(itemModel => itemModel.ImagePath)" class="img-responsive" />
                    <!--
                    <div class="form-group">
                        <label asp-for="ImagePath" class="control-label"></label>
                        <input asp-for="ImagePath" type="file" class="form-control" style="height:auto" />
                        <span asp-validation-for="ImagePath" class="text-danger"></span>
                    </div>
                    -->
                    
                    <div class="form-group">
                        <label asp-for="ImagePath" class="control-label"></label>
                        <input asp-for="ImagePath" class="form-control" />
                        <span asp-validation-for="ImagePath" class="text-danger"></span>
                    </div>
                    
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6">
                            <div class="checkbox">
                                <label>
                                    <input asp-for="IsFavorite" /> @Html.DisplayNameFor(model => model.IsFavorite)
                                </label>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="checkbox">
                                <label>
                                    <input asp-for="IsBorrowed" /> @Html.DisplayNameFor(model => model.IsBorrowed)
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastLoan" class="control-label"></label>
                        <input asp-for="LastLoan" class="form-control" readonly />
                        <span asp-validation-for="LastLoan" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <input asp-for="Status" class="form-control" readonly />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
                <div id="loanDetails" class="col-lg-4 col-md-6">
                    <div class="form-group">
                        <h4>Vai Emprestar Este Jogo Para Alguém??</h4>
                        <label asp-for="CurrentLoan.Friend" class="control-label"></label>
                        
                        <select asp-for="CurrentLoan.Friend.FriendId" asp-items="@(new SelectList(ViewBag.Friends,"FriendId","Name"))" class="form-control">
                            <option>Selecione</option>
                        </select>
                        
                    </div>
                    <div class="form-group">
                        <label asp-for="CurrentLoan.LoanDate" class="control-label"></label>
                        <input asp-for="CurrentLoan.LoanDate" class="form-control" value="@DateTime.Now"/>
                        <span asp-validation-for="CurrentLoan.LoanDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CurrentLoan.DevolutionPrevision" class="control-label"></label>
                        <input asp-for="CurrentLoan.DevolutionPrevision" class="form-control" value="@DateTime.Now.AddMonths(1)"/>
                        <span asp-validation-for="CurrentLoan.DevolutionPrevision" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                
                <div class="form-group text-center">
                    <div class="row"></div>
                    <div class="bottom-right">
                        <input type="submit" value="Salvar !!" title="Salvar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="row">

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
